    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:background="@drawable/bg"
        android:orientation="vertical" >
   <fragment android:id="@+id/my_map_fragment1"
     android:name="eu.trentorise.smartcampus.dt.fragments.stories.MyMapFragment"
     android:tag="mapfragment"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:layout_weight="0.8"
	/>

<ScrollView  android:id="@+id/story_details"
    android:layout_width="match_parent"
    android:layout_height="125dp" 
   >




     <RelativeLayout
         android:id="@+id/story_details"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="8dp" >

         <TextView
             android:id="@+id/story_details_title"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true"
             android:layout_margin="3dp"
             android:background="@android:color/transparent"
             android:gravity="left"
             android:paddingBottom="10dp"
             android:textColor="@color/sc_light_gray"
             android:textSize="26dp" />
         
         
         <RatingBar
             android:id="@+id/story_details_rating"
             style="@style/ratingBar"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
             
             android:layout_below="@+id/story_details_title"
             android:clickable="false"
             android:numStars="5" />

         <TextView
             android:id="@+id/attendees_num"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@+id/img_attendees"           
             android:layout_below="@+id/story_details_title"
             android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
             android:textColor="@color/sc_light_gray" />

         <TextView
             android:id="@+id/story_details_descr"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/story_details_rating"
             android:autoLink="web|all"
             android:background="@android:color/transparent"
             android:textColor="@color/sc_light_gray" />

         <ImageView
             android:id="@+id/img_attendees"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/story_details_title"
             android:layout_toRightOf="@+id/story_details_rating"
             android:contentDescription="@string/attendees"
             android:src="@drawable/ic_attendees" />

     </RelativeLayout>

</ScrollView>


<LinearLayout
    android:id="@+id/start_buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/btn_story_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_story" />

</LinearLayout>

<ScrollView  android:id="@+id/step_details"
    android:layout_width="match_parent"
    android:layout_height="125dp"   
   >


     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="8dp" >

         <include
             android:id="@+id/step_counter"
             layout="@layout/step_counter" />



         <TextView
             android:id="@+id/step_details_name"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_toRightOf="@+id/step_counter"
             android:background="@android:color/transparent"
             android:paddingLeft="5dp"
             android:text="namename"
             android:textColor="@color/sc_light_gray" />





         <TextView
             android:id="@+id/step_details_note"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/step_counter"
             android:layout_alignParentBottom="true"
             android:layout_below="@+id/step_details_name"
             android:layout_margin="3dp"
             android:background="@android:color/transparent"
             android:paddingBottom="10dp"
             android:paddingTop="10dp"
             android:text="tenotenote"
             android:textColor="@color/sc_light_gray" />

     </RelativeLayout>

</ScrollView>
<LinearLayout
    android:id="@+id/navigation_buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


    <Button
        android:id="@+id/btn_story_prev"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/prev_step" />


    <Button
        android:id="@+id/btn_story_next"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/next_step" />

</LinearLayout>

    </LinearLayout>
